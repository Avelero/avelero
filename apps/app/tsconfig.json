{
  "extends": "@v1/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["../api/src/*"],
      "@engine/*": ["../engine/src/*"],
      "@jobs/*": ["../../packages/jobs/src/*"],
      "@db/*": ["../../packages/db/src/*"]
    },
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "../api"
  ]
}
