{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "dist",
      "dist/**",
      "node_modules",
      "node_modules/**",
      ".turbo",
      ".next",
      ".next/**",
      ".trigger",
      ".trigger/**",
      ".react-email",
      ".react-email/**"
    ]
  },
  "linter": {
    "ignore": [
      ".wrangler",
      "node_modules",
      ".next",
      ".trigger",
      "packages/tsconfig",
      ".react-email"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "overrides": [
    {
      "include": [
        "packages/integrations/src/connectors/shopify/category-mappings.ts"
      ],
      "linter": {
        "rules": {
          "complexity": {
            "useLiteralKeys": "off"
          }
        }
      }
    },
    {
      "include": ["apps/web/src/app/updates/[slug]/page.tsx"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "off"
          }
        }
      }
    }
  ]
}
