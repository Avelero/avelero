{
  "name": "v1",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@v1/tsconfig": "workspace:*",
    "bun-types": "^1.3.5",
    "dotenv": "^17.2.3",
    "knip": "^5.82.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.21",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:app": "turbo build --filter=@v1/app",
    "build:dpp": "turbo build --filter=@v1/dpp",
    "knip": "knip",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev jobs --parallel",
    "dev:web": "turbo dev --filter=@v1/web",
    "dev:jobs": "turbo jobs --filter=@v1/jobs",
    "dev:app": "turbo dev --filter=@v1/app",
    "dev:api": "turbo dev --filter=@v1/api",
    "dev:dpp": "turbo dev --filter=@v1/dpp",
    "start:web": "turbo start --filter=@v1/web",
    "start:app": "turbo start --filter=@v1/app",
    "start:dpp": "turbo start --filter=@v1/dpp",
    "start:api": "turbo start --filter=@v1/api",
    "test": "bash ./tooling/scripts/run-isolated-tests.sh",
    "test:isolated": "bash ./tooling/scripts/run-isolated-tests.sh",
    "test:raw": "turbo test --concurrency=1",
    "format": "biome format --write .",
    "lint": "turbo lint && bun lint:repo",
    "lint:repo": "bunx sherif@latest",
    "lint:repo:fix": "bunx sherif@latest --fix",
    "typecheck": "turbo typecheck",
    "seed:shopify": "bun run scripts/seed-shopify-integration.ts"
  },
  "workspaces": ["packages/*", "apps/*"]
}
