{
  "extends": "@v1/tsconfig/base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts"
  ],
  "compilerOptions": {
    "types": [
      "@types/bun"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "exclude": [
    "node_modules"
  ]
}